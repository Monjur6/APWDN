
@{
    ViewBag.Title = "ShowProduct";
}

<style>

    .links a {
        float: left;
        color: #1d110e;
        text-align: center;
        padding: 8px 10px;
        text-decoration: none;
        font-size: 15px;
    }

        .links a:hover {
            background-color: #ddd;
            color: black;
        }

        .links a.active {
            background-color: #04AA6D;
            color: white;
        }
        .links a.active1 {
            background-color: lightseagreen;
            color: white;
        }
</style>

<dev class="links">
    <p style="text-align: center; ">
        <a href="~/Product/CreateProduct">Create Product</a>
        <a class="active" href="~/Product/ShowProduct">Show Product</a>
        <a href="~/Product/ShowProduct">Edit</a>
        <a href="~/Product/ShowProduct">Delete</a>
        <a class="active1" href="~/Student/Cart">Cart</a>
    </p>
</dev>
<br />
<br />
<hr />
<span class="alert-success"><b>@TempData["message"]</b></span>
<br /><br />
<table class="table table-bordered">
    @foreach (var st in Model)
    {
        <tr>
            <td>@st.Id</td>
            <td>@st.Name</td>
            <td>@st.Price</td>
            <td>@st.Qty</td>
            <td><a href="/product/edit/@st.Id" class="btn btn-info">Edit</a></td>
            <td><a href="/product/delete/@st.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/product/cart/@st.Id" class="btn btn-default">Add to cart</a></td>
        </tr>
    }

</table>

